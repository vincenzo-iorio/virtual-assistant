<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VirtualAssistant.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VirtualAssistant"
    xmlns:views="clr-namespace:VirtualAssistant.Views"
    Title="VirtualAssistant">

    <!-- Home Page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Login Page -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- Chat Page -->
    <ShellContent
        Title="Chat"
        ContentTemplate="{DataTemplate views:ChatPage}"
        Route="ChatPage" />

</Shell>