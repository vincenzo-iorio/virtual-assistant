<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtualAssistant.Views.LoginPage"
             BackgroundColor="#f4f8fb"
             Title="Login">

	<VerticalStackLayout Padding="30" Spacing="25">

		<!-- Top icon -->
		<Image Source="login.png"
               WidthRequest="100"
               HeightRequest="100"
               HorizontalOptions="Center" />

		<!-- Main heading -->
		<Label Text="Accedi al tuo assistente virtuale"
               FontSize="28"
               TextColor="#1E3A8A"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

		<!-- Subtitle -->
		<Label Text="Entra per continuare la tua esperienza"
               FontSize="16"
               TextColor="#4B5563"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

		<!-- Login button -->
		<Button Text="Login"
                Clicked="OnLoginClicked"
                BackgroundColor="#2563EB"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50"
                WidthRequest="200"
                FontSize="18"
                HorizontalOptions="Center"
                Shadow="{OnPlatform iOS='Medium', Android='Medium', WinUI='Medium'}" />
	</VerticalStackLayout>
</ContentPage>