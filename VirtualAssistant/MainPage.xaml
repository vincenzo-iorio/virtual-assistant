<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtualAssistant.MainPage"
             BackgroundColor="#1F2937">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <!-- Assistant Image -->
            <Image Source="virtual_assistant.jpeg"
                   HeightRequest="200"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   SemanticProperties.Description="Virtual Assistant Icon" />

            <!-- Greeting -->
            <Label Text="Benvenuto!"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1F2937"
                   SemanticProperties.HeadingLevel="Level1" />

            <!-- Description -->
            <Label Text="Sono il tuo assistente virtuale. Posso aiutarti a trovare risposte, organizzare idee e semplificare la tua giornata."
                   FontSize="18"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   SemanticProperties.HeadingLevel="Level2"
                   Margin="0,0,0,10" />

            <!-- Start Button -->
            <Button Text="Inizia"
                    Clicked="OnStartClicked"
                    HorizontalOptions="Center"
                    WidthRequest="160"
                    BackgroundColor="#00008B"
                    TextColor="White"
                    CornerRadius="25"
                    FontSize="18"
                    SemanticProperties.Hint="Avvia l'assistente virtuale" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>